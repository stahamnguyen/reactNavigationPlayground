{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noResolve": false,
    "jsx": "react",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "lib": ["es2017"],
    "skipLibCheck": true
  },
  "filesGlob": ["src/**/*"],
  "types": ["react", "react-native", "jest"],
  "exclude": ["android", "ios", "build", "node_modules", "src/__tests__"],
  "compileOnSave": true
}
